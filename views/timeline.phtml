<div class="row">
	<div class="col-lg-4">
		<ul class="nav nav-tabs" id="tasknav">
			<li class="active"><a href="#logtask" data-toggle="tab">Log Task</a></li>
		</ul>
	</div>

</div>

<div class="row">
	<div class="col-lg-4">
	
		<div class="panel panel-nav">
			<div class="panel-body">
			
				<div class="tab-content">

					<!-- Log tasks completed AFK -->
					<div class="tab-pane active" id="logtask">

						<form id="recordtask" role="form" class="form-horizontal">
							<input type="hidden" id="user" name="user" value="" />
							<div class="form-group">
								<div class="col-xs-12">
									<input id="task" name="task" type="text" class="form-control" placeholder="Whatchu worked on?" />
								</div>
							</div>
							<div class="form-group">
								<div class="col-xs-12">
									<textarea id="description" name="description" class="form-control vert" rows="3" placeholder="What did you get done?" ></textarea>
								</div>
							</div>
							<!--
							<div class="form-group">
								<div class="col-xs-12">
